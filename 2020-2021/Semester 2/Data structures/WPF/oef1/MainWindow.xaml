<Window x:Class="oef1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oef1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSubmit" Content="Check number" HorizontalAlignment="Center" Height="47" VerticalAlignment="Center" Width="101" Click="btnSubmit_Click"/>
        <TextBox x:Name="tboInput" HorizontalAlignment="Left" Height="36" Margin="62,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="147"/>
        <TextBlock x:Name="tblOutput" HorizontalAlignment="Left" Height="42" Margin="552,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="187"/>

    </Grid>
</Window>
